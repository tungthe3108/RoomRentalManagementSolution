@page
@model RoomRentalManagementSolution.Pages.Room.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1 style="color:red">Tạo phòng</h1>
</div>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-4">
                        <label class="control-label">Tên phòng</label>
                        <input asp-for="Room.RoomName" class="form-control" />
                        <span asp-validation-for="Room.RoomName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="control-label">Tầng</label>
                        <select asp-for="Room.FloorId" class="form-control" asp-items="ViewBag.FloorId"></select>
                        <span asp-validation-for="Room.FloorId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="control-label">Số người ở tối đa</label>
                        <select asp-for="Room.NumOfPersonId" class="form-control" asp-items="ViewBag.NumOfPersonId"></select>
                        <span asp-validation-for="Room.NumOfPersonId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="control-label">Diện tích</label>
                        <select asp-for="Room.AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
                        <span asp-validation-for="Room.AreaId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label class="control-label">Giá</label>
                        <select asp-for="Room.PriceId" class="form-control" asp-items="ViewBag.PriceId"></select>
                        <span asp-validation-for="Room.PriceId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" style="border-radius:15px" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<button class="btn btn-secondary mt-3" style="border-radius:15px"><a asp-page="/Room/Index" class="text-decoration-none" style="color:white;"> Quay lại</a></button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
