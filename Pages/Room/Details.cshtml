@page
@model RoomRentalManagementSolution.Pages.Room.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Phòng @Html.DisplayFor(model => model.Room.RoomName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Tên phòng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>
        <dt class="col-sm-2">
            Tầng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Floor.Floor1)
        </dd>
        <dt class="col-sm-2">
            Số người ở tối đa:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.NumOfPerson.NumOfPerson1)
        </dd>
        <dt class="col-sm-2">
            Diện tích:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Area.Area1)
        </dd>
        <dt class="col-sm-2">
            Giá:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Price.Price)
        </dd>
    </dl>
</div>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>
                Mã khách hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Phòng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @item.Dob.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.RoomName)
                </td>
                <td>
                    <a asp-page="/Customer/Edit" asp-route-id="@item.CustomerId">Cập nhật</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <button class="btn btn-secondary mt-3" style="border-radius:15px"><a asp-page="/Room/Index" class="text-decoration-none" style="color:white;"> Quay lại</a></button>
</div>
