@page
@model RoomRentalManagementSolution.Pages.Customer.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chi tiết khách hàng</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Sex)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Dob)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            Phòng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Room.RoomName)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-secondary mt-3" style="border-radius:15px"><a asp-page="/Room/Index" class="text-decoration-none" style="color:white;"> Quay lại</a></button>
</div>
